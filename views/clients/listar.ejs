<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <title>Meus Clientes - Gestor de Serviços</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  </head>
  <body class="bg-gray-900 text-white">
    <div class="min-h-screen flex flex-col justify-center items-center px-4">
      <div class="flex flex-col items-center mb-10">
        <img src="/trator.png" alt="Ícone" class="w-20 h-20 mb-4">
        <h2 class="text-2xl font-bold text-teal-400">Meus Clientes</h2>
      </div>

      <div class="bg-gray-800 rounded-2xl shadow-2xl p-8 w-full max-w-4xl transition-all duration-300 hover:scale-[1.01]">
        <div class="flex justify-between mb-6">
          <a
            href="/clients/new"
            class="bg-teal-600 hover:bg-teal-700 text-white font-semibold rounded-md px-4 py-2 transition border-2 border-teal-400"
          >
            Novo Cliente
          </a>
          <div class="flex gap-4">
            <a
              href="/dashboard"
              class="text-teal-400 font-semibold hover:underline transition"
            >
              Painel
            </a>
            <a
              href="/logout"
              class="text-red-400 font-semibold hover:underline transition"
            >
              Sair
            </a>
          </div>
        </div>

        <% if (clients.length === 0) { %>
          <p class="text-gray-400 text-center py-8">Nenhum cliente cadastrado ainda.</p>
        <% } else { %>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead>
              <tr class="border-b border-gray-700">
                <th class="text-left py-3 px-4 text-teal-300">Nome</th>
                <th class="text-left py-3 px-4 text-teal-300">Email</th>
                <th class="text-left py-3 px-4 text-teal-300">Telefone</th>
                <th class="text-center py-3 px-4 text-teal-300">Ações</th>
              </tr>
            </thead>
            <tbody>
              <% clients.forEach(function(client) { %>
              <tr class="border-b border-gray-700 hover:bg-gray-700">
                <td class="py-3 px-4 text-white"><%= client.name %></td>
                <td class="py-3 px-4 text-gray-300"><%= client.email || '-' %></td>
                <td class="py-3 px-4 text-gray-300"><%= client.phone || '-' %></td>
                <td class="py-3 px-4">
                  <div class="flex gap-2 justify-center">
                    <a
                      href="/clients/edit/<%= client.id %>"
                      class="bg-blue-600 hover:bg-blue-700 text-white rounded-md px-3 py-1 font-semibold transition border-2 border-blue-400 text-sm"
                    >
                      Editar
                    </a>
                    <form action="/clients/delete/<%= client.id %>" method="POST" style="display: inline;">
                      <button
                        type="submit"
                        class="bg-red-600 hover:bg-red-700 text-white rounded-md px-3 py-1 font-semibold transition border-2 border-red-400 text-sm"
                        onclick="return confirm('Tem certeza que deseja excluir este cliente?')"
                      >
                        Excluir
                      </button>
                    </form>
                  </div>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
        <% } %>
      </div>
    </div>

    <script>
      // Verifica se o usuário ainda está autenticado
      (function() {
        // Desabilita o botão voltar após logout - verifica se página veio do cache
        window.addEventListener('pageshow', function(event) {
          if (event.persisted || (window.performance && window.performance.navigation.type == 2)) {
            // Página foi restaurada do cache - verifica autenticação
            fetch('/api/check-auth', {
              method: 'GET',
              credentials: 'include'
            })
            .then(response => {
              if (!response.ok) {
                window.location.replace('/login');
              }
            })
            .catch(() => {
              window.location.replace('/login');
            });
          }
        });
      })();
    </script>
  </body>
</html>
